@model List<DataLTK.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Tài khoản quản trị viên</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tài khoản</th>
                        <th>Mật khẩu</th>
                        <th>Chức vụ</th>
                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Username</th>
                            <td>@item.Password</td>
                            <td>Admin</td>
                            <td>
                                <a href="/Admin/Account/Edit/@item.id" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Sửa </a>
                                <a href="/Admin/Account/Delete/@item.id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Xóa </a>
                            </td>
                        </tr>}

                </tbody>
            </table>
            <a href="/Admin/Account/Create" class="btn btn-success"><i class="fa fa-plus"></i> Thêm mới</a>
        </div>
        </div>
    </div>

